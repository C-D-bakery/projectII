<link rel="stylesheet" href="/stylesheets/create.css" />

<section class="sectionCreate">
  <body class="p-3 m-0 border-0 bd-example">

    
  <form method="POST" action="/product/order" >

    <h2 class="create"> Order Your Product</h2>

<div class="mb-3"></div>
      <legend>Select:</legend>

      <label><input type="radio" name="product" value="pick-up" />Pick-up</label>
      <label><input type="radio" name="product" value="delivery" />Delivery</label>

    </div>

      <div class="mb-3">
    <label for="exampleInputName" class="form-label">Name</label>
    <input name="name" type="text" class="form-control" placeholder="Bob Alice Charlie"/>
    <div>

   <div class="mb-3">
    <label for="exampleInputbillingAddress" class="form-label">Address</label>
    <input type="text"class="form-control" name="billingAddress"/>
    <div>

  <div class="mb-3">
    <label for="exampleInputquantityOrder" class="form-label">Quantity Available</label>
    <input name="quantityOrder"type="number" class="form-control" step="any" min="1" max="100" />
    <div>

         <div class="mb-3">
    <label for="exampleInputdate" class="form-label">Order date:</label>
    <input type="date" name="date" id="date" class="form-control"/>
    <div>



  <div class="mb-3">
     <label for="exampleInputpayment" class="form-label">Payment Method</label>
     <select class="form-control"name="payment">
          <option name="payment" value="Credit-card">Credit-card</option>
          <option name="payment" value="PayPal">PayPal</option>
          <option name="payment" value="Cash">Cash</option>
    </select>
  </div>


<div class="mb-3">
    <label for="exampleInputcreate" class="form-label"></label>
    <button type="submit" class="form-control"> Order </button>
    <div>


 </form>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
    crossorigin="anonymous"
  ></script>
</section>
