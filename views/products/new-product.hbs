<link rel="stylesheet" href="/stylesheets/create.css" />

<section class="sectionCreate">
  <body class="p-3 m-0 border-0 bd-example">

    
  <form method="POST" action="/product/create" enctype="multipart/form-data">

    <h2 class="create"> Create your own product</h2>

      <legend>Select the type:</legend>

      <label><input type="radio" name="product" value="Cake" />Cake</label>
      <label><input type="radio" name="product" value="Bread" />Bread</label>

    </div>

      <div class="mb-3">
    <label for="exampleInputName" class="form-label">Product Name</label>
    <input name="name" type="text" class="form-control" placeholder="Banana">
    <div>

   <div class="mb-3">
    <label for="exampleInputPrice" class="form-label">Price</label>
    <input type="number"class="form-control" name="price" min="1" max="500" />
    <div>

  <div class="mb-3">
    <label for="exampleInputQuantity" class="form-label">Quantity</label>
    <input name="quantity"type="number"class="form-control" step="any" min="1" max="500" />
    <div>


  <div class="mb-3">
    <label for="exampleInputIngredient" class="form-label">Ingredients</label>
     <textarea class="form-control"
          id="w3review"
          name="ingredients"
          rows="4"
          cols="50"
        ></textarea>
    <div>

  <div class="mb-3">
     <label for="exampleInputGluten_free" class="form-label">Gluten_free</label>
     <select class="form-control"name="gluten_free">
          <option name="gluten_free" value="No">No</option>
          <option name="gluten_free" value="Yes">Yes</option>
    </select>
  </div>

<div>
    <button id="upload" >
      <input type="file" name="image" class="form-control-file"/></button>
    </div>


<div class="mb-3">
    <label for="exampleInputcreate" class="form-label"></label>
    <button type="submit" class="form-control"> Create </button>
    <div>


 </form>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
