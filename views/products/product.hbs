<h1 id="shopTitle">Catalog</h1>
<div class="container">

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

    {{#each items}}
      <div class="col">
        <div class="card h-100">
          <img
            class="card-img-top img-fluid"
            src="{{this.image}}"
            alt="product"
            style="height: 250px; object-fit: cover;"
          />
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">Some quick example text to build on the card
              title and make up the bulk of the card's content.</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Price: {{this.price}}€</li>
            <li class="list-group-item">Serving: {{this.quantity}}</li>
            <li class="list-group-item">Made by: {{this.madeby.username}} </li>
          </ul>
          <div class="card-body">
            <a href="/product/{{this._id}}/update" class="card-link">Edit</a>
            <a
              href="/product/{{this._id}}/details"
              class="card-link"
            >Details</a>
            <form method="POST" action="/product/{{this._id}}/delete">
              <br />
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
